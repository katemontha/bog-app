<h3 class="creature-name">Creatures</h3>
<div class="index">
    <% @creatures.each do |creature| %>
        <p class="card">
            <strong>Name: </strong><%= creature.name %><br>
            <strong>Description: </strong><%= creature.description %><br>
            <%= link_to 'View Creature', creature_path(creature) %>
        </p>
    <% end %>
</div>